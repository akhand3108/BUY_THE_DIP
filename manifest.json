{
  "name": " Dip Alarm",
  "version": "0.1",
  "description": "Get alarm whenever your  crypto cureency reaches a dip ",
  "manifest_version": 2,

  "permissions": ["activeTab", "alarms", "declarativeContent", "storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bitcoin-16.png",
      "32": "images/bitcoin-32.png",
      "64": "images/bitcoin-64.png",
      "128": "images/bitcoin-128.png"
    }
  },

  "icons": {
    "16": "images/bitcoin-16.png",
    "32": "images/bitcoin-32.png",
    "64": "images/bitcoin-64.png",
    "128": "images/bitcoin-128.png"
  }
}
